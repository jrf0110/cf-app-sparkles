{
  "manifest_version": 2,

  "name": "Cursor Sparkles",
  "description": "Adds sparkles to your cursor",
  "version": "1.3",

  "content_scripts": [
    { "matches": ["http://*/*", "https://*/*"],
      "js": ["sparkles.js"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_title": "Sparkles",
    "default_icon": "sparkles-logo.png",
    "default_popup": "popup.html"
  }
}